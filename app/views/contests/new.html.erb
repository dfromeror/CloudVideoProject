<h1>Create a new Contest</h1>
<div class="row" ng-controller="NewContestController">
  <div class="col-md-8 col-md-offset-2">
    <%= form_for :contest, url: { action: "create" }, html: { class: 'form-horizontal' } do %>
        <input type="hidden" name="contest[user_id]" value="<%=	 user_logged_id %>">
        <div class="form-group">
          <label for="name">Contest Name:</label>
          <input type="text" class="form-control" id="name" name="contest[name]" ng-model="contest.name" required />
        </div>
        <div class="form-group">
          <label for="description">Contest Description:</label>
          <input type="text" class="form-control" id="name" name="contest[description]" ng-model="contest.description" required />
        </div>
        <div class="form-group">
          <label for="media">Media URL:</label>
          <input type="text" class="form-control" id="media" name="contest[media]" ng-model="contest.media" required />
        </div>
        <div class="form-group">
          <label for="url">Landing Page URL:</label>
          <input type="text" class="form-control" id="url" name="contest[url]" ng-model="contest.url" required />
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-md-6">
              <%= label_tag :start_date %>
              <%= date_select(:contest, :start_date) %>
            </div>
            <div class="col-md-6">
              <label for="url">End Date:</label>
              <%= date_select(:contest, :end_date, class: "form-control") %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <label for="url">Award Description:</label>
          <textarea name="contest[award_description]" id="awardDescription" cols="30" rows="5" class="form-control" required></textarea>
        </div>
        <div class="row">
          <div class="col-md-1 col-md-offset-10">
            <button type="clear" class="btn btn-default">Clear</button>
          </div>
          <div class="col-md-1">
            <button type="submit" class="btn btn-primary">Create</button>
          </div>
        </div>
    <% end %>
  </div>
</div>
