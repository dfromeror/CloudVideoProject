<%= javascript_include_tag 'swfobject' %>
<div>
  <% if flash[:success] %>
      <div class="alert alert-success" role="alert"><%= flash[:success] %></div>
  <% end %>
  <% if flash[:error] %>
      <div class="alert alert-danger" role="alert"><%= flash[:error] %></div>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <h1>Contest <%= @contest.name %></h1>
    </div>
  </div>
  <div>
    <div class="row">
      <div class="col-md-2"><h3>Description</h3></div>
    </div>
    <div class="row">
      <div class="col-md-11 col-md-offset-1"><%= @contest.description %></div>
    </div>
  </div>
  <div>
    <div class="row">
      <div class="col-md-2"><h3>URL</h3></div>
    </div>
    <div class="row">
      <div class="col-md-11 col-md-offset-1"><%= @contest.url %></div>
    </div>
  </div>
  <br /><br /><br /><br />
  <%= render "contests/video_list" %>
  <div class="row">
    <div class="col-md-12">
      <%= render "contests/upload_videos" %>
    </div>
  </div>

</div>

